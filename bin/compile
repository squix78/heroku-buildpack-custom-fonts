#!/usr/bin/env bash
#
# Does the dirty work after bin/detect allows us to continue
#
# Called by Heroku:
# bin/compile BUILD_DIR CACHE_DIR ENV_DIR
#
set -e

BUILD_DIR="$1"
FONTS_FILE="$(dirname $0)/../fonts.tar.gz"
FONTS_TARGET_DIR="$BUILD_DIR/.fonts"
FONTCONFIG_SOURCE_DIR="$(dirname $0)/../fontconfig/."
FONTCONFIG_TARGET_DIR="$BUILD_DIR/.fontconfig/"

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

echo "-----> Installing custom fonts"
#mkdir -p "$FONTS_TARGET_DIR"
#tar -xvzf "$FONTS_FILE" -C "$FONTS_TARGET_DIR" | indent

echo "-----> Extracting fontconfig to $FONTCONFIG_TARGET_DIR"
mkdir -p "$FONTCONFIG_TARGET_DIR"
cp -a "$FONTCONFIG_SOURCE_DIR" "$FONTCONFIG_TARGET_DIR" | indent

fc-cache -fv
exit 0
